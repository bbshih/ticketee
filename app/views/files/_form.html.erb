<%= fields_for @ticket do |f| %>
  <p>
    <%= f.fields_for :assets, child_index: number do |asset| %>
      <p>
        <%= asset.label :asset, "File ##{number +=1}" %>
        <%= asset.file_field :asset %>
        <%= link_to "Add another file", 'javascript:', id: "add_another_file" %>
      </p>
    <% end %>
  </p>
<% end %>
